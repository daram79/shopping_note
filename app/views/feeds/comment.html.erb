<div id="comment_container">
	<% @comments.each do |comment| %>
	  <div class="" style="background-color: yellow; padding: 10px; margin: 10px;">
	  	<span><%=image_tag comment.user.profile_photos[0].image.thumb.url%></span>
	  	<span><%=comment.user.nick%></span>
	  	<span><%=comment.content%></span>
	  </div>
	<% end %>
</div>
<div style="height:50px;"></div>
<div class="" style="; width: 100%;">
	<span class="" style="width: 70%; position: fixed; bottom: 1px; left: 1px">
		<textarea class="input_box" style="margin: 0; width: 100%;height: 50px;"></textarea>
	</span>
	<span class="" style="position: fixed; bottom: 4px; right: 2px; width: 27%; height: 50px;">
		<input class="send_comment" style="width: 100%; -webkit-appearance: none; height: 55px;" data-feed-id="<%=@feed.id%>" type="button" value="send" />
	</span>
</div>
<script>
	window.onload=move_scroll
	
	function move_scroll(){
		var h = document.body.clientHeight - 50;
		$("#comment_container").height(h);
		$("#comment_container").scrollTop(100000);
	}
</script>
