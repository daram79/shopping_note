<div data-role="header">login</div>
<div data-role="content">
	<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
	  <div><%= f.email_field :email, autofocus: true %></div>
	  <div><%= f.password_field :password, autocomplete: "off" %></div>
	
	  <% if devise_mapping.rememberable? -%>
	    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
	  <% end -%>
	
	  <div><%= f.submit "Sign in" %></div>
	<% end %>
	
	<div><%= link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook), "data-ajax" => "false", class: "custom-btn" %></div>
	<%= render "users/shared/links" %>


<script>
	<% if flash[:already_user] %>
		alert("이미 등록된 이메일 입니다.")
	
	<% end %>
</script>	